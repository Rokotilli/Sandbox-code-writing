<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="BackgroundColor">#FF333333</Color>
    <Color x:Key="ForegroundColor">#FFFFFFFF</Color>

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />

    <SolidColorBrush x:Key="AvalonBackground" Color="#1a1919" />

    <SolidColorBrush x:Key="ButtonNormalBackground" Color="#FF555555"/>
    <SolidColorBrush x:Key="ButtonHoverBackground" Color="#FF222222"/>
    <SolidColorBrush x:Key="ButtonPressedBackground" Color="#FF444444"/>

    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="#FF2D2D30" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#FF3E3E42" />
    <SolidColorBrush x:Key="ComboBoxForegroundBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ComboBoxMouseOverBackgroundBrush" Color="#FF1E1E1E" />
    <SolidColorBrush x:Key="ComboBoxFocusedBorderBrush" Color="#FF007ACC" />
    
    <SolidColorBrush x:Key="ComboBoxPopupBackgroundBrush" Color="#FF2D2D30" />
    <SolidColorBrush x:Key="ComboBoxPopupBorderBrush" Color="#FF3E3E42" />    
    <SolidColorBrush x:Key="ComboBoxArrowBrush" Color="#FFFFFFFF" />

    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#FF2D2D30"/>
    <SolidColorBrush x:Key="HeaderBorderBrush" Color="#FF3E3E42"/>
    <SolidColorBrush x:Key="HeaderHoverBackgroundBrush" Color="#333e52"/>

    <SolidColorBrush x:Key="ListItemBorderBrush" Color="#FF3E3E42"/>

    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
    </Style>
</ResourceDictionary>